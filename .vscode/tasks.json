    "version": "2.0.0",
    "tasks": [
        {
            "label": "python: build",
            "type": "shell",
            "command": "pipenv",
            "args": [
                "run",
                "python",
                "-m",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "python: build windows executable (pyinstaller/spec)",
            "type": "shell",
            "command": "pipenv",
            "args": [
                "run",
                "pyinstaller",
                "${workspaceFolder}/m2fs.spec"
            ],
            "problemMatcher": []
        },
