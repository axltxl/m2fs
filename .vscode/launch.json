{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug (default)",
            "type": "python",
            "request": "launch",
            "program": "midi2sim.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "debug (midi list)",
            "type": "python",
            "request": "launch",
            "program": "midi2sim.py",
            "args": [
                "midi",
                "list"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "debug (sim get variable)",
            "type": "python",
            "request": "launch",
            "program": "midi2sim.py",
            "args": [
                "sim",
                "var",
                "get",
                "${input:SimVarGet}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "debug (sim set variable)",
            "type": "python",
            "request": "launch",
            "program": "midi2sim.py",
            "args": [
                "sim",
                "var",
                "set",
                "${input:SimVarSet}",
                "${input:SimVarSetValue}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "SimVarGet",
            "type": "promptString",
            "description": "SimVar to query",
            "default": "HEADING_INDICATOR"
        },
        {
            "id": "SimVarSet",
            "type": "promptString",
            "description": "SimVar name to set",
            "default": "CAMERA_STATE"
        },
        {
            "id": "SimVarSetValue",
            "type": "promptString",
            "description": "SimVar value to set",
            "default": "4"
        },
    ]
}
