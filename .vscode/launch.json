{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug (default)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-c",
                "${workspaceFolder}/examples/arturia/minilab_mk2.py",
                "--simconnect-backend",
                "${input:SimConnectBackend}"
            ]
        },
        {
            "name": "debug (help)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--help"
            ]
        },
        {
            "name": "debug (midi list)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "args": [
                "midi",
                "list"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "debug (sim get variable)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "args": [
                "sim",
                "var",
                "get",
                "${input:SimVarGet}",
                "--simconnect-backend",
                "${input:SimConnectBackend}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "SimVarGet",
            "description": "SimVar to query",
            "type": "pickString",
            "options": [
                "HEADING_INDICATOR",
                "(A:HEADING INDICATOR,radians)",
                "(A:HEADING INDICATOR,degrees)",
                // Working Title C4J
                "(L:WT_CJ4_HDG_ON)",
                "(L:WT_CJ4_NAV_ON)",
                "(L:WT_CJ4_VNAV_ON)",
                "(L:WT_CJ4_VS_ON)",
                "(L:WT_CJ4_FLC_ON)",
                "(L:WT_CJ4_ALT_HOLD)",
                "(L:LIGHTING_Knob_Master)",
                "(A:AUTOPILOT HEADING LOCK DIR, radians)",
                "(A:AUTOPILOT VERTICAL LOCK DIR:1)",
                "(A:AUTOPILOT AIRSPEED LOCK DIR:1)",
                "(A:AUTOPILOT ALTITUDE LOCK VAR:1)"
            ],
            "default": "HEADING_INDICATOR"
        },
        {
            "id": "SimConnectBackend",
            "type": "pickString",
            "options": [
                "Python-SimConnect",
                "MobiFlight-SimConnect"
            ],
            "description": "SimConnect backend",
            "default": "MobiFlight-SimConnect"
        }
    ]
}
