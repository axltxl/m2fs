    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug (default)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-c",
                "${workspaceFolder}/examples/arturia/minilab_mk2.py",
                "--simconnect-backend",
                "${input:SimConnectBackend}"
            ]
        },
        {
            "name": "debug (help)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--help"
            ]
        },
        {
            "name": "debug (midi list)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "args": [
                "midi",
                "list"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "debug (sim get variable)",
            "type": "python",
            "request": "launch",
            "module": "midi2sim",
            "args": [
                "sim",
                "var",
                "get",
                "${input:SimVarGet}",
                "--simconnect-backend",
                "${input:SimConnectBackend}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "SimVarGet",
            "type": "promptString",
            "description": "SimVar to query",
            "default": "HEADING_INDICATOR"
        },
        {
            "id": "SimConnectBackend",
            "type": "pickString",
            "options": [
                "Python-SimConnect",
                "MobiFlight-SimConnect"
            ],
            "description": "SimVar name to set",
            "default": "Python-SimConnect"
        }
    ]
}
